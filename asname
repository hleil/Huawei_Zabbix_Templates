#!/bin/bash
#ASNUMBER=$(snmpget -Os -c public -v 2c $2 .1.3.6.1.2.1.15.3.1.9.$1 |cut -d ":" -f3|cut -d " " -f2)
ASNUMBER=$3
ASNAME=$(whois -h whois.cymru.com  AS$ASNUMBER | egrep -v "AS Name")
if [ "$ASNAME" = "NO_NAME" ]; then
   ASNAME=""
fi
if [ "$ASNAME" = "" ]; then
   ASNAME=$(whois $1|grep owner: |cut  -d ":" -f 2|sed -e 's/^[ \t]*//')
fi
if [ "$ASNAME" = "" ]; then
   ASNAME=$(whois $1|grep network:Org-Name: |cut  -d ":" -f 3|sed -e 's/^[ \t]*//')
fi
if [ "$ASNAME" = "" ]; then
   ASNAME=$(whois $1|grep netname: |cut  -d ":" -f 2|sed -e 's/^[ \t]*//')
fi
if [ "$ASNAME" = "MMA ACESSORIOS E SERVICOS DE INFORMATICA LTDA." ]; then
   ASNAME=$(sshpass -f /var/run/zabbix/.sshpass -P "id_rsa':" ssh monitoramento@$2 "dis bgp pee $1 v | in description" | grep Peer|cut -d"\"" -f 2)
fi
if [ "$ASNAME" = "" ]; then
   ASNAME=$(sshpass -f /var/run/zabbix/.sshpass -P "id_rsa':" ssh monitoramento@$2 "dis bgp pee $1 v | in description" | grep Peer|cut -d"\"" -f 2)
fi
if [ "$ASNAME" = "" ]; then
   ASNAME=NO_NAME
fi
echo $ASNAME
